<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.HomeScreen">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="37dp"
        android:fontFamily="@font/zabal_semibold"
        android:text="@string/welcome"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/waving_hand"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/welcome_text"
        app:srcCompat="@drawable/waving_emoji" />


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ask_question_button"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="139dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_design"
        android:backgroundTint="@color/turquoise_blue"
        android:fontFamily="@font/zabal_semibold"
        app:layout_constraintBottom_toTopOf="@+id/find_answer_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text"
        app:layout_constraintVertical_bias="0.5" >


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/question_mark_xml"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="@string/ask_question"
            android:textAllCaps="false"
            android:textColor="#F6F4F4"
            android:textColorHint="@color/turquoise_blue"
            android:textSize="19sp"
            android:fontFamily="@font/zabal_semibold"
            app:icon="@drawable/question_mark_xml" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/request_button"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="204dp"
        android:background="@drawable/button_design"
        android:backgroundTint="@color/peach"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/find_answer_button"
        app:layout_constraintVertical_bias="0.5" >

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/remote_xml"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/zabal_semibold"
            android:gravity="center"
            android:text="@string/request_remote"
            android:textAllCaps="false"
            android:textColor="#F6F4F4"
            android:textColorHint="@color/turquoise_blue"
            android:textSize="19sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/find_answer_button"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_design"
        android:backgroundTint="@color/purple_700"
        android:fontFamily="@font/zabal_semibold"
        android:text="@string/find_answer"
        android:textAllCaps="false"
        android:textColorHint="@color/teal_200"
        android:textSize="19sp"
        app:icon="@drawable/open_book_xml"
        app:layout_constraintBottom_toTopOf="@+id/request_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ask_question_button"
        app:layout_constraintVertical_bias="0.5">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:src="@drawable/open_book_xml"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/zabal_semibold"
            android:gravity="center"
            android:text="@string/find_answer"
            android:textAllCaps="false"
            android:textColor="#F6F4F4"
            android:textColorHint="@color/turquoise_blue"
            android:textSize="19sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>